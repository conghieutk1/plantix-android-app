<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/auth_container"
    android:background="@drawable/background_login"
    android:orientation="vertical"
    android:gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_gravity="top"

        >
        <ImageButton
            android:id="@+id/returnUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/background_icon_circle"
            android:src="@drawable/arrow_back_fill0_wght400_grad0_opsz24" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:orientation="vertical"
        android:paddingStart="50dp"
        android:paddingEnd="40dp"
        android:layout_gravity="top" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ứng dụng tốt nhất cho cây trồng của bạn"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:lineSpacingExtra="20dp"
            android:textStyle="bold"
            android:gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/buttonGotoLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/main_color8"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:text="Đăng nhập" />
        <Button
            android:id="@+id/buttonGotoSignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:text="Đăng ký" />
    </LinearLayout>
</LinearLayout>