<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_page_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".UserFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_nav"
        android:padding="16dp"
        android:layout_gravity="top"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Plantix"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/settings_fill0_wght400_grad0_opsz24" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="79dp"
        android:background="@color/white"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/border_nav"
                android:orientation="horizontal"
                android:padding="16dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_avatar"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    >
                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản của bạn"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tham gia cộng đồng Plantix"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:textSize="13sp"
                        android:layout_marginBottom="10dp"
                        />

                    <Button
                        android:id="@+id/buttonLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        android:background="@drawable/border_button_login"
                        android:textColor="@color/color_button1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Đăng nhập" />
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_nav"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cùng nhau gieo trồng thông minh!"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chia sẻ Plantix và giúp nông dân giải quyết các vấn đề về cây trồng của họ."
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:textSize="13sp"
                            />

                        <Button
                            android:id="@+id/buttonSharePlantix"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:backgroundTint="@color/white"
                            android:gravity="right"
                            android:text="Chia sẻ Plantix"
                            android:textColor="@color/color_button1"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                app:cardCornerRadius="15dp"
                android:layout_margin="16dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_nav"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/customer_support"
                         />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Trải nghiệm của bạn với ứng dụng Plantix là gì?"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chúng tôi rất muốn nghe suy nghĩa và đề xuất của bạn."
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            />

                        <Button
                            android:id="@+id/buttonViewAllDiagnostic"
                            android:layout_width="wrap_content"
                            android:layout_height="8dp"
                            android:layout_gravity="right"
                            android:layout_weight="5"
                            android:backgroundTint="@color/white"
                            android:gravity="right"
                            android:text="Cung cấp thông tin phản hồi"
                            android:textColor="@color/color_button1"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="200dp"
                android:layout_height="50dp"
                app:backgroundTint="@null"
                android:background="@drawable/border_button_login"
                android:textColor="@color/color_button1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Đăng xuất" />

        </LinearLayout>

    </ScrollView>



    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_top"
        android:padding="5dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trang chủ"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/dashboard_fill0_wght400_grad0_opsz24"/>
        <Button
            android:id="@+id/user_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/border_button_nav"
            app:backgroundTint="@null"
            android:text="Người dùng"
            android:textColor="@color/color_button1"
            android:drawableBottom="@drawable/active_person_fill0_wght400_grad0_opsz24"/>

    </LinearLayout>

</FrameLayout>